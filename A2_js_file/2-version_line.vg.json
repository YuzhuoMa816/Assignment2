{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/YuzhuoMa816/Assignment2/master/A2_data/world-happiness-report-2021.csv"
    },
    "params": [
        {
            "name": "Region_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "labels": [
                    "Show All",
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "name": "Region Selection: "
            }
        }
    ],
    "width": 400,
    "height": 300,
    "transform": [
        {
            "pivot": "symbol",
            "value": "Freedom_to_make_life_choices",
            "groupby": [
                "Country_name"
            ],
            "filter": "Region_selection == null || datum.Regional_indicator == Region_selection"
        }
    ],
    
    "encoding": {
        "x": {
            "field": "Country_name",
            "type": "nominal"
        }
    },
    
    "layer": [
      
      
        {
            "mark": {
                    "type": "line",
                    "point": {
                        "filled": false,
                        "fill": "white"
                    }
                },
            "encoding": {
                "color": {
                    "field": "Regional_indicator",
                    "type": "nominal"
                },
                "y": {
                    "field": "Social_support",
                    "type": "quantitative",
                    "point": {
                        "filled": false,
                        "fill": "white"
                    }
                }
            },
            "layer": [
                {
                    "mark": "line"
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "aaa",
                                "empty": false
                            }
                        }
                    ],
                    "mark": "point"
                }
            ]
        },
        {
            "transform": [
                {
                    "pivot": "symbol",
                    "value": "Social_support",
                    "groupby": [
                        "Country_name"
                    ]
                }
            ],
            "mark": "rule",
            "encoding": {
                "opacity": {
                    "condition": {
                        "value": 0.3,
                        "param": "aaa",
                        "empty": false
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "Country_name",
                        "type": "nominal",
                        "title": "Country Name"
                    },
                    {
                        "field": "Ladderscore",
                        "type": "quantitative",
                        "format": ",",
                        "title": "Happiness Score"
                    },
                    {
                        "field": "Social_support",
                        "type": "quantitative",
                        "format": ",",
                        "title": "Social Support"
                    },
                    {
                        "field": "Freedom_to_make_life_choices",
                        "type": "quantitative",
                        "format": ",",
                        "title": "Life Choice Freedom"
                    }
                ]
            },
            "params": [
                {
                    "name": "aaa",
                    "select": {
                        "type": "point",
                        "fields": [
                            "Country_name"
                        ],
                        "nearest": true,
                        "on": "mouseover",
                        "clear": "mouseout"
                    }
                }
            ]
        }
    ]
}