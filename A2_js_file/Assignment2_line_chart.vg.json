{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Freedom_to_make_life_choices and Healthy_life_expectancy",
    "height": 500,
    "data":{
        "url": "https://raw.githubusercontent.com/YuzhuoMa816/Assignment2/master/A2_data/world-happiness-report-2021.csv"
    },
    "params": [
        {
            "name":"Region_selection",
            "bind":{
                "input": "select",
                "options":[
                    null,
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "labels": [
                    "Show All",
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "name": "Region Selection: "
            }
        }
    ],

    "vconcat":[
        {
        "height":300,
        "transform": [{
            "pivot": "symbol",
            "value": "Freedom_to_make_life_choices",
            "groupby": ["Country_name"],
            "filter": "Region_selection == datum.Regional_indicator[2] || datum.Regional_indicator == Region_selection"
          }],
        "repeat":{
            "layer":["Social_support", "Freedom_to_make_life_choices"]
        },
        "spec":{
            "layer":[{
                "mark":{
                    "type":"line",
                    "point":{
                        "filled": false,
                        "fill":"white"
                    }
                },
                "encoding":{
                    "x": {
                        "field": "Country_name",
                        "type": "nominal",
                        "title": "Country"
                    },
                    "y":{
                        "field": {"repeat": "layer"},
                        "type":"quantitative",
                        "axis": {"tickCount": 5},
                        "scale": {"type": "linear", "domain": [0,1]},
                        "title": "Freedom_to_make_life_choices"
                    },
                    "stroke": {"datum": {"repeat": "layer"}, "type": "nominal"}
                    
                }
            }]

        }
    }
    ]
}