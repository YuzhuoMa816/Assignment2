{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bar graph showing the scores of the top 5 students. This shows an example of the window transform, for how the top K (5) can be filtered, and also how a rank can be computed for each student.",
  "title": "Top 10 happiness country in the World",
  "data": {
    "url": "https://raw.githubusercontent.com/YuzhuoMa816/Assignment2/master/A2_data/world-happiness-report-2021.csv"
  },
  "transform": [
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "Ladderscore",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Ladderscore",
      "type": "quantitative",
      "title":"Happiness Score"
    },
    "y": {
      "field": "Country_name",
      "type": "nominal",
      "sort": {
        "field": "Ladderscore",
        "op": "average",
        "order": "descending"
      }
    },
    "color": {
      "field": "Country_name",
      "type": "nominal",
      "sort": "x",
      "scale": {
        "scheme": "purples"
      }
    },
    "tooltip": [
      {
        "field": "Regional_indicator",
        "type": "nominal",
        "title": "Regional indicator"
      },
      {
        "field": "Ladderscore",
        "type": "quantitative",
        "format": ",",
        "title": "Happiness Score"
      }
    ]
  }
}