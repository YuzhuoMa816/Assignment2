{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/YuzhuoMa816/Assignment2/master/A2_data/world-happiness-report-2021.csv"
    },
    "width": 350,
    "height": 250,
    "params": [
        {
            "name": "Region_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "labels": [
                    "Show All",
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "name": "Region Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "Region_selection == null || datum.Regional_indicator == Region_selection"
        }
    ],
    "encoding": {
        "x": {
            "bin": {
                "maxbins": 60
            },
            "field": "Freedom_to_make_life_choices",
            "type": "quantitative"
        },
        "y": {
            "bin": {
                "maxbins": 40
            },
            "field": "Social_support",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "Country_name",
                "type": "nominal",
                "title": "Country Name"
            },
            {
                "field": "Ladderscore",
                "type": "quantitative",
                "format": ",",
                "title": "Happiness Score"
            },
            {
                "field": "Social_support",
                "type": "quantitative",
                "format": ",",
                "title": "Social_support"
            },
            {
                "field": "Freedom_to_make_life_choices",
                "type": "quantitative",
                "format": ",",
                "title": "Freedom_to_make_life_choices"
            }
        ],
        "color": {
            "field": "Ladderscore",
            "type": "quantitative",
            "scale": {
                "type": "linear",
                "scheme": "bluepurple"
            }
        }
    },
    "layer": [
        {
            "mark": "rect"
        },
        {
            "mark":{
                "type": "text",
                "align":"left",
                "baseline": "middle",
                "dx":8,
                "fontSize": 11.5,
                "fontStyle": "italic",
                "color":"darkgrey"
            },
            "encoding": {
                "text":{"field":"Country_name", "type": "nominal"},
                "opacity": {
                    "condition": {
                      "test": "datum['Country_name'] == 'Australia' || datum['Country_name'] == 'China' || datum['Country_name'] == 'Turkmenistan' || datum['Country_name'] == 'India' || datum['Country_name'] == 'Afghanistan' || datum['Country_name'] == 'Israel'",
                      "value": 1
                    },
                    "value": 0
                  },
                "color":{
                    "field": "Country_name",
                    "type": "nominal",
                    "scale": {
                        "type": "ordinal",
                        "scheme": "warmgreys"
                    },
                    "legend":null
                }
            }
        }
    ],
    "config": {
        "view": {
            "stroke": "transparent"
        }
    }
}