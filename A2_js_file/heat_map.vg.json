{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/YuzhuoMa816/Assignment2/master/A2_data/world-happiness-report-2021.csv"
    },

    "mark": "rect",
    "width": 300,
    "height": 250,

    "params": [
        {
            "name":"Region_selection",
            "bind":{
                "input": "select",
                "options":[
                    null,
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "labels": [
                    "Show All",
                    "Western Europe",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "Latin America and Caribbean",
                    "Central and Eastern Europe",
                    "East Asia",
                    "Southeast Asia",
                    "Commonwealth of Independent States",
                    "Sub-Saharan Africa",
                    "South Asia"
                ],
                "name": "Region Selection: "
            }
        }
    ],
    "transform": [
        {"filter": "Region_selection == null || datum.Regional_indicator == Region_selection"}
    ],
    "encoding": {
        "x": {
            "bin": {
                "maxbins": 60
            },
            "field": "Freedom_to_make_life_choices",
            "type": "quantitative"
        },
        "y": {
            "bin": {
                "maxbins": 40
            },
            "field": "Social_support",
            "type": "quantitative"
        },
        "color": {
            "field":"Ladderscore",
            "type": "quantitative",
            "scale": {"type": "linear","scheme":"bluepurple"}
        },
        "tooltip": [
            {
                "field": "Country_name",
                "type": "nominal",
                "title": "Country Name"
            },
            {
                "field": "Ladderscore",
                "type": "quantitative",
                "format": ",",
                "title": "Happiness Score"
            },
            {
                "field": "Social_support",
                "type": "quantitative",
                "format": ",",
                "title": "Social_support"
            },
            {
                "field": "Freedom_to_make_life_choices",
                "type": "quantitative",
                "format": ",",
                "title": "Freedom_to_make_life_choices"
            }
        ]
    },
    "config": {
        "view": {
            "stroke": "transparent"
        }
    }
}