{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 300,
    "width": 300,
    "title": [
        "Top 30 High happiness countries and the trend overview"
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/YuzhuoMa816/Assignment2/master/A2_data/world-happiness-report-2021.csv"
    },
    "params": [
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "on": "mouseover"
            }
        },
        {
            "name": "select",
            "select": "point"
        }
    ],
    "transform": [
        {
            "aggregate": [
                {
                    "op": "count",
                    "field": "Country_name",
                    "as": "count_country"
                }
            ],
            "groupby": [
                "Regional_indicator"
            ]
        }
    ],
    "mark": {
        "type": "arc",
        "innerRadius": 30,
        "stroke": "purples"
    },
    "encoding": {
        "theta": {
            "field": "count_country",
            "type": "quantitative",
            "stack": true
        },
        "radius": {
            "field": "count_country",
            "scale": {
                "type": "sqrt",
                "zero": true,
                "rangeMin": 20
            }
        },
        "fillOpacity": {
            "condition": {
                "param": "select",
                "value": 1
            },
            "value": 0.3
        },
        "strokeWidth": {
            "condition": [
                {
                    "param": "select",
                    "empty": false,
                    "value": 2
                },
                {
                    "param": "highlight",
                    "empty": false,
                    "value": 1
                }
            ],
            "value": 0
        },
        "tooltip": [
            {
                "field": "Regional_indicator",
                "type": "nominal",
                "title": "Regional indicator"
            },
            {
                "field": "count_country",
                "type": "quantitative",
                "title": "Number Of Country"
            }
        ],
        "color": {
            "field": "Regional_indicator",
            "type": "nominal"
        }
    }
}