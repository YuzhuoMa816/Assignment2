{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/YuzhuoMa816/Assignment2/master/A2_data/world-happiness-report-2021.csv"
    },
    "hconcat": [
        {
            "mark": "bar",
            "transform": [
                {
                    "filter": {
                        "param": "brush"
                    }
                }
            ],
            "encoding": {
                "y": {
                    "field": "Country_name",
                    "type": "nominal",
                    "axis": {
                        "minExtent": 200,
                        "title": null
                    },
                    "sort": "-x"
                },
                "x": {
                    "aggregate": "count",
                    "scale": {
                        "domain": [
                            0,
                            8
                        ]
                    },
                    "axis": {
                        "orient": "top"
                    }
                }
            }
        },
        {
            "height": 200,
            "width": 50,
            "params": [
                {
                    "name": "brush",
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "y"
                        ]
                    }
                }
            ],
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "Country_name",
                    "type": "nominal",
                    "sort": "-x",
                    "axis": null
                },
                "x": {
                    "aggregate": "count",
                    "axis": null
                }
            }
        }
    ]
}